<h1>All posts</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% @posts.each do |p| %>
      <h2 class="post_title"><%= p.title %></h2>
      <p class="post_body"><%= p.body %></p>
      <p class="post_author">
        Written by: 
      <% if current_user %>
        <%= p.user.username %></p>
      <% else %>
        <span class="login-info"><i>hidden, please log in</i></span>
      <% end %>
    <% end %>
    <%= link_to "New post", posts_path %>
  </div>
</div>