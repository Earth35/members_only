<h1>New post</h1>

<div class="row">
  <div class="col-main">
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      
      <%= f.label :body, "New post" %>
      <%= f.text_area :body, class: "form-control" %>
    
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>